PROJ_NAME=HellriegelIOCPSimpl
TARGET_NAME=$(PROJ_NAME).exe
INTERMEDIATE_FOLDER=/build/$(PROJ_NAME)/

CC = cl
CC_OPT = /Fo$(INTERMEDIATE_FOLDER)
CC_OPT =$(CC_OPT) /Zi
CC_OPT =$(CC_OPT) /c

LINK = link
LINK_OPT=/OUT:$(TARGET_NAME)

CC_SWITCH = /OUT:$(TARGET_NAME)

all: $(TARGET_NAME)

$(TARGET_NAME): COMPILE
	$(LINK) $(LINK_OPT) $(INTERMEDIATE_FOLDER)*.obj

COMPILE:
	$(CC) $(CC_OPT) ./HellriegelIOCPSimpl/*.cpp
